<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12 + launch/splash style -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- background color -->
        <item name="android:windowSplashScreenBackground">@android:color/white</item>

        <!-- ðŸ‘‡ disable the default app icon -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@null</item>
    </style>

    <!-- Theme used after splash -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
